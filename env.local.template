# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=fraud_agent

# Fireworks AI Configuration
FIREWORKS_API_KEY=your_fireworks_api_key_here

# Coinbase Developer Platform (CDP) Configuration
# Get these from: https://portal.cdp.coinbase.com/

# CDP API Key Name - Just the API key ID (UUID), NOT the organization path!
# Get this from: https://portal.cdp.coinbase.com/
# Format: UUID like "3be6bdb4-687b-48dc-87fb-55d7569c39d5"
CDP_API_KEY_NAME=your_cdp_api_key_id_here

# CDP API Key Private Key (EC Private Key in PEM format)
# IMPORTANT: Download the API key JSON from CDP portal to get the private key
# The private key should look like:
# -----BEGIN EC PRIVATE KEY-----
# ...base64 encoded key...
# -----END EC PRIVATE KEY-----
# 
# For .env.local, use \n for newlines:
# CDP_API_KEY_PRIVATE_KEY=-----BEGIN EC PRIVATE KEY-----\n...\n-----END EC PRIVATE KEY-----
CDP_API_KEY_PRIVATE_KEY=your_cdp_private_key_here

# CDP Wallet ID (will be auto-created on first run if not set)
# Leave empty to auto-create, or set after first run
CDP_WALLET_ID=

# CDP Network ID (Base Sepolia testnet)
CDP_NETWORK_ID=base-sepolia

# CDP Recipient Address (Signal Provider Address)
# This is the Ethereum address that will receive USDC payments
# Format: 0x followed by 40 hex characters
# For testing, use any valid Base Sepolia address
CDP_RECIPIENT_ADDRESS=0x0000000000000000000000000000000000000000

# Mock Mode Configuration (for demos/development)
# Set to "true" to use mock payments and SMS instead of real services
# Mock mode generates realistic-looking data perfect for demos
USE_MOCK_PAYMENTS=true
USE_MOCK_SMS=true

# Twilio SMS Configuration (optional - only needed if USE_MOCK_SMS=false)
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+15551234567

# ML Service Configuration (optional - defaults to localhost:8020)
ML_SERVICE_URL=http://localhost:8020
